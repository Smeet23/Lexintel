# ============================================================================
# REQUIRED - LexIntel Development Configuration
# ============================================================================

# Database Connection
DATABASE_URL="postgresql+asyncpg://lex_user:lex_password@postgres:5432/lex_intel_dev"

# Redis (used for caching and Celery task queue)
REDIS_URL="redis://redis:6379"

# OpenAI API
OPENAI_API_KEY="sk-..."

# ============================================================================
# OPTIONAL - Customize if needed
# ============================================================================

# Logging
LOG_LEVEL="INFO"
DEBUG="false"
ENV="development"

# OpenAI Models
OPENAI_MODEL="text-embedding-3-small"
OPENAI_CHAT_MODEL="gpt-4o"

# File Upload
MAX_UPLOAD_SIZE="104857600"  # 100MB
ALLOWED_EXTENSIONS=".pdf,.docx,.txt,.doc,.pptx"

# Text Extraction
CHUNK_SIZE="4000"
CHUNK_OVERLAP="400"

# Azure Storage (only needed if not using local Azurite)
# AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;..."

# Celery Task Limits
TASK_SOFT_TIME_LIMIT="1500"  # 25 minutes
TASK_TIME_LIMIT="1800"       # 30 minutes
